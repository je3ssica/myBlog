<h1 class="headline">Hej, välkommen till min blogg </h1>
<span class="addPost"><%= link_to 'New post', new_post_path%></span>


<% @posts.each do |post| %>
<div class="post">
    <h2 class="title"><%= link_to post.title, post_path(post) %></h2>
    <p>
        <%= post.body %>
    </p>
<p class="editDel">
    <%= link_to 'Redigera', edit_post_path(post) %>     <%= link_to 'Radera', post_path(post), method: :delete, data: {confirm: "Är du säker på att du vill ta bort det här inlägget?"} %>

</p>
</div>
<% end %>
